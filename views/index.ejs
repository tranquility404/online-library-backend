<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
    <div class="p-2 pt-3">
        <h3 class="text-center">Admin Panel</h3>
        <div class="px-5">
            <a href="/user/logout" class="btn btn-primary">Logout</a>
        </div>
        <ul class="users-container d-flex flex-wrap gap-2 mt-5">
            <% users.forEach(function(user) { %>
                <li class="card">
                    <div class="card-body">
                        <strong class="card-title">
                            <%= user.name %>
                        </strong>
                        <p>
                            <%= user.email %>
                        </p>
                        <a href="/admin/rename/<%= user._id %>" class="btn btn-primary mt-3">Rename</a>
                        <button class="btn btn-danger mt-3">Delete</button>
                    </div>

                </li>
                <% }) %>
        </ul>

        <ul class="d-flex flex-wrap gap-2 mt-5">
            <% genres.forEach(function(genre) { %>
                <li class="card">
                    <div class="card-body">
                        <strong><%= genre.name %></strong>
                        <br/>
                        <a href="/edit-genre/<%= genre._id %>" class="btn btn-primary mt-3">Rename</a>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
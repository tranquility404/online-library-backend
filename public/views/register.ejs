<body>
    <div class="p-2 pt-3 text-center">
        <h3>Register</h3>
        <form class="form-group w-25 mx-auto mt-5 row gap-2" action="/public/register" method="post">
            <input type="text" class="form-control" name="name" id="" placeholder="Name" required/>
            <input type="email" class="form-control" name="email" id="" placeholder="Email" required/>
            <input type="password" class="form-control" name="password" id="" placeholder="Password" required/>
            <button type="submit" class="btn btn-primary mt-3">Register</button>
        </form>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
